<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AnimationActivity">

    <LinearLayout android:layout_width="200dp"
                  android:layout_height="300dp"
                  android:id="@+id/animationobject"
                  android:orientation="vertical">

        <TextView android:id="@+id/tv1"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                android:text="@string/string1"
                android:background="@color/color1"
                android:textColor="@color/color2"/>

        <ImageView
                android:id="@+id/iv1"
                android:src="@drawable/ic_airplanemode_active_blue_24dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <EditText
                android:focusableInTouchMode="true"
                android:id="@+id/et_animation"
                android:singleLine="true"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText
                android:focusableInTouchMode="true"
                android:id="@+id/et_animation1"
                android:singleLine="true"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <EditText
                android:focusableInTouchMode="true"
                android:id="@+id/et_animation2"
                android:singleLine="true"
                android:nextFocusUp="@+id/btndemo"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="hi"
                android:focusable="true"
                    android:id="@+id/btndemo"/>
    </LinearLayout>

</RelativeLayout>