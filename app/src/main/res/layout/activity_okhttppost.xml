<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".okhttppostActivity">
    <Button
            android:id="@+id/btn_okkpost_okhttppostactivity"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText
            android:layout_margin="10dp"
            android:id="@+id/et_postetname_okhttppostactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_margin="10dp"
            android:id="@+id/et_postetsalary_okhttppostactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_margin="10dp"
            android:id="@+id/et_postetage_okhttppostactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ImageView

            android:layout_gravity="center"
            android:id="@+id/iv_glide_okhttppostactivity"
            android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>