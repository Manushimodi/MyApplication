<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ConstrainlayoutActivity">

    <ImageView

            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="571dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/iv_imageview_constrainlayoutactivity"
            app:srcCompat="@android:drawable/ic_lock_lock"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_fabbtn_constrainlayoutactivity"
            android:layout_width="56dp"

            android:tint="@android:color/holo_orange_dark"
            android:layout_height="56dp" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toEndOf="@+id/iv_imageview_constrainlayoutactivity"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="523dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_imageview_constrainlayoutactivity"
            app:layout_constraintVertical_bias="0.782"
            app:layout_constraintHorizontal_bias="1.0" android:src="@android:drawable/btn_star"/>
    <TextView
            android:text="TextView"
            android:layout_width="150dp"
            android:textSize="25sp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:layout_height="30dp"
            android:id="@+id/textView"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_imageview_constrainlayoutactivity"
            app:layout_constraintEnd_toStartOf="@+id/fab_fabbtn_constrainlayoutactivity"
            android:layout_marginRight="108dp" android:layout_marginEnd="108dp"
    />
    <ImageView
            android:layout_width="87dp"
            android:layout_height="64dp" app:srcCompat="@android:drawable/radiobutton_off_background"
            android:id="@+id/iv_imageview"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_imageview_constrainlayoutactivity"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            android:layout_marginBottom="455dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.33"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView3" android:layout_marginLeft="7dp" android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@+id/iv_imageview" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="444dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="255dp" android:layout_marginRight="255dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="609dp"
            tools:layout_editor_absoluteX="109dp" android:id="@+id/button3"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="306dp" tools:layout_editor_absoluteY="295dp" tools:layout_editor_absoluteX="8dp"/>
    <ScrollView
            android:layout_width="395dp"
            android:layout_height="58dp" tools:layout_editor_absoluteY="665dp" tools:layout_editor_absoluteX="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>